# Maintainer: XZS <d dot f dot fischer at web dot de>

pkgname="gnome-shell-extension-wintitle-git"
pkgdesc="Shows the title of window when scrolled on the appMenu button."
pkgver=15.cd6d96f
pkgrel=1
arch=(any)
url="https://github.com/meghprkh/wintitle"
license=(GPLv2)
depends=('gnome-shell>=3.4')

# template input; name=git

prepare() {
  # gnome-shell 3.16 is not officially supported.
  sed -i '6s/]/, "3.16"]/' $pkgname/metadata.json
}

# template input; name=modularize-package
# template input; name=install-code
