# Maintainer: XZS <d dot f dot fischer at web dot de>

pkgname='gnome-shell-extension-hidetopbar-git'
_dirname=hidetopbar
pkgdesc="Gnome 3 extension to hide the top bar except in overview mode"
pkgver=118.a7a66ff
pkgrel=2
arch=(any)
url='https://github.com/mlutfy/hidetopbar'
license=(GPLv2)
depends=('gnome-shell>=3.8')
install=gschemas-and-warn.install
source=('git+https://github.com/mlutfy/hidetopbar')
md5sums=('SKIP')

pkgver() {
  cd hidetopbar
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  # gnome-shell 3.16 is not officially supported.
  cd "$_dirname"
  sed -i '2s/]/, "3.16"]/' metadata.json
}

# template input; name=modularize-package
# template input; name=install-code
# template input; name=install-schemas
# template input; name=install-locale
