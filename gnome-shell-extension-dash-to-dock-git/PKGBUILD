pkgname=gnome-shell-extension-dash-to-dock-git
pkgver=46.r15.gc28e564
pkgrel=1
pkgdesc="A gnome-shell extension that transforms the dash into an intellihide dock"
arch=('any')
url="https://micheleg.github.io/dash-to-dock/"
